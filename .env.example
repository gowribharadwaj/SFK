# Azure OpenAI
USE_AZURE=true
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com/
AZURE_OPENAI_KEY=<YOUR_AZURE_OPENAI_KEY>
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Redis (optional)
USE_REDIS=true
REDIS_URL=rediss://<username>:<password>@<host>:<port>    # or redis://... (match your provider)

# App
PORT=8000

# Local fallback OpenAI (optional)
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4o
